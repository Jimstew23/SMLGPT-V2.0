# SMLGPT V2.0 Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Azure Cognitive Services Multi-Service
AZURE_COGNITIVE_SERVICES_ENDPOINT=
AZURE_COGNITIVE_SERVICES_KEY=

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=smlgpt-files

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_ADMIN_KEY=
AZURE_SEARCH_INDEX_NAME=smlgpt-v2-index

# Azure OpenAI GPT-4.1
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# Cohere Embed-v4.0
COHERE_API_KEY=

# Speech Services
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/smlgpt-v2.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
